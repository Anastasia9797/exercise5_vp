<Window x:Class="exercise5_vp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exercise5_vp"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Верх</TextBlock>
        <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Background="Maroon"/>
        <TextBlock Grid.Row="2" FontSize="55" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" TextWrapping="Wrap">Низ</TextBlock>
    </Grid>
</Window>
